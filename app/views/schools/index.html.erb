<div class="container">
  <div class="row no-gutters">
  
  <div id="app">
    <!-- List of all CPS schools - VueJS -->
      <div class="col-sm-4">
        <div class="well">
          <div>
            <input type="text" class="formControl" placeholder="Enter search here" v-model="nameFilter" list="cpsNames">
          </div>
          <div>
            <input type="text" placeholder="Enter address" v-model="nameAddress">
            <button v-on:click="placeMarker(location)">Insert into map</button>
          </div>
          <br>
          <div v-for="school in schools" v-if="isValidSchool(school)">
            <h4><a v-bind:href="'/schools/' + school.school_id">{{ school.long_name }}</a></h4>
            <h4>Located at {{ school.address }}</h4>
            <p>Type: {{ school.school_type }}</p>
            <br>
          </div>
        </div>
      </div>
  </div>

    <!-- Google Maps view -->
      <div id="mapIndex"></div>
        <div class="col-sm-8">
          <div class="well">
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDwX5lbHn1JS_1JHy1DB5Nmt9GMUPSMB18" async defer>
          </script>
        </div>
      </div>
  </div>
</div>
